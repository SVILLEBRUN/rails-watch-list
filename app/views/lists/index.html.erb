<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <div class="flex-start">
      <img width="80" src="https://img.freepik.com/premium-vector/click-movie-logo-vector_18099-258.jpg">
    </div>
    <div class="flex-end">
      <%= link_to 'Add new list', new_list_path, class:"btn btn-primary m-1" %>
      <%= link_to 'My lists', lists_path, class:"btn btn-secondary m-1" %>
    </div>
  </div>
</div>

<div class="container text-center">
  <h1>Lists index</h1>
  <div class="cards">
    <% @lists.each do |list|%>
      <%= link_to list_path(list) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <%= list.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
