<%= render 'layouts/navbar' %>


<div class="container">
  <h1 class="text-center"><%= @list.name %></h1>

  <h2>Movies :</h2>
  <% @bookmarks.each do |bookmark| %>
    <div class="card-product mb-3">
      <img src=<%= Movie.find(bookmark.movie_id).poster_url %> />
      <div class="card-product-infos">
        <h4><%= Movie.find(bookmark.movie_id).title %> - <%= Movie.find(bookmark.movie_id).rating %> <i class="fa-solid fa-star" id="star"></i></h4>
        <p><strong>Comment :</strong> <%= bookmark.comment %></p>
        <p><strong>Movie description :</strong> <%= Movie.find(bookmark.movie_id).overview %></p>
        <p class="text-end"><%= link_to 'delete', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-primary" %></p>
      </div>
    </div>
  <% end %>


  <div class="mt-5">
    <%= link_to 'Add bookmark', new_list_bookmark_path(@list), class:"btn btn-primary" %>
  </div>
</div>
