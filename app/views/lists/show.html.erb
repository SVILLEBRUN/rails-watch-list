<h1><%= @list.name %></h1>

<h2>Movies :</h2>
<% @bookmarks.each do |bookmark| %>
  <p>
    <strong><%= Movie.find(bookmark.movie_id).title %> :</strong> <%= bookmark.comment %>
    <%= link_to 'delete', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </p>
<% end %>


<div class="mt-5">
  <%= link_to 'Add bookmark', new_list_bookmark_path(@list), class:"btn btn-primary" %>
</div>

<div class="mt-5">
  <%= link_to 'Go to list index', lists_path, class:"btn btn-primary" %>
</div>
